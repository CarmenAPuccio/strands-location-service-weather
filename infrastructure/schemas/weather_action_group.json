                "type": "object",
                "properties": {
                  "latitude": {
                    "type": "number",
                    "description": "The latitude coordinate"
                  },
                  "longitude": {
                    "type": "number",
                    "description": "The longitude coordinate"
                  }
                },
                "required": [
                  "latitude",
                  "longitude"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
